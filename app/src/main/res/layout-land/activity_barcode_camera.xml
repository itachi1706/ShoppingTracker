<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:keepScreenOn="true"
    android:id="@+id/topLayout"
    tools:context="com.itachi1706.shoppingtracker.VisionAPI.VisionApiBarcodeCameraActivity">

    <com.itachi1706.shoppingtracker.VisionAPI.CameraSourcePreview
        android:id="@+id/barcode_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.itachi1706.shoppingtracker.VisionAPI.GraphicOverlay
            android:id="@+id/barcode_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.itachi1706.shoppingtracker.VisionAPI.CameraSourcePreview>

</LinearLayout>
